	public class TileData 
	{
		private var _sheetId:String;
		private var _tileId:int;
		
		public function TileData(tile:int, sheet:String) 
		{
			_sheetId = sheet;
			_tileId = tile;
		}
		
		public function get sheetId():String 
		{
			return _sheetId;
		}
		
		public function set sheetId(value:String):void 
		{
			_sheetId = value;
		}
		
		public function get tileId():int
		{
			return _tileId;
		}
		
		public function set tileId(value:int):void 
		{
			_tileId = value;
		}
		
	}

}